<%- include('base/profile')%>
     
<div class="col-md-9 px-0">
 <div class="logout-content"><a href="/logout">Logout</a></div>    
 <div class="task-login-right">
        <h3>Task History</h3>
      <hr>
      <div class="row">       
        <div class="task-box">       
          <%if(taskDetails){%>
             <h5># Complete Tasks - <%=taskDetails.length%></h5>
          <% taskDetails.forEach(function(task,index){ %>
          <div class="row mx-0">
          
               <div class="col-md-4">
                  <p><small class="circle"></small> <%=task.task_title %></p>
              </div>
              <div class="col-md-4">
                 <p><%=task.date.toLocaleDateString() %>
            <small><%=task.date.toLocaleTimeString() %></small>
                
              </div>
              <div class="col-md-4">
                   <p><%=task.task_completed_date.toLocaleDateString() %>
            <small><%=task.task_completed_date.toLocaleTimeString() %></small></p>
      
              </div>
          </div>

         <% }) %> 
        <% } %>  
        </div>


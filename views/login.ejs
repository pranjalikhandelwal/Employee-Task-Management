<%- include('base/header')%>
    <a href="/">
        <h2 class="brand-name-login"><small class="brand-text">E</small>mplo<small class="brand-text">Y</small>ee</h2>
    </a>
    <div class="row login-content">
        <div class="col-md-8 login-left">
            <h2 class="login-title">Sign in</h2>
            <div class="icons">
                <a href="/">
                    <p class="icon">f</p>
                </a>
                <a href="/">
                    <p class="icon">G+</p>
                </a>
                <a href="/">
                    <p class="icon">in</p>
                </a>
            </div>
            <p class="text-center">Or Use your email account :</p>
            <form action="/login" method="POST">
                <input type="text" name="userid" class="fa form-input" placeholder=" &#xf0e0; Email" 
                value="<%=isCookie?isCookie.userid:''%>"
                />
                <input type="password" name="password" class="fa form-input" placeholder=" &#xf023; Password " 
                value="<%=isCookie?isCookie.password:''%>"
                />
                <a href="/changepassword" class="forget-password">Forget Password</a>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" checked>
                    <label class="form-check-label">Remember me</label>
                </div>
                <input type="submit" class="login-btn" value="SIGN IN">
            </form>
        </div>
            <div class="col-md-4 login-right">
            <h3 class="login-right-title">Hello, Employee !!</h3>
            <p class="login-text">Enter your Personal Detail
                and Start journey with Us!</p>
            <a href="/registration" class="login-btn login-right-btn">SIGN UP</a>
        </div>
    </div>
    </body>

    </html>